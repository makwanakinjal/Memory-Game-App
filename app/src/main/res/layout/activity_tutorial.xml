<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="5dp"
    android:background="#89DCD4"
    android:orientation="vertical"
    android:padding="16dp"
    android:textAlignment="gravity"
    tools:context=".TutorialActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:paddingEnd="16dp"
        android:text="Welcome to the Memory Game App!"
        android:textColor="#5423A8"
        android:textSize="28sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="Instructions:"
        android:textColor="#A483DD"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:paddingBottom="4dp"
        android:text="1. Start by tapping on the grid size button to choose the desired grid size for the game."
        android:textAlignment="gravity"
        android:textColor="#151415"
        android:textSize="22dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:paddingBottom="4dp"
        android:text="2. The goal is to find all the matching pairs of tiles with the same numbers. "
        android:textAlignment="gravity"
        android:textColor="#151415"
        android:textSize="22dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:paddingBottom="4dp"
        android:text="3. Tap on any tile to reveal its number and then tap on another tile to see if it matches the first tile."
        android:textAlignment="gravity"
        android:textColor="#151415"
        android:textSize="22dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:paddingBottom="4dp"
        android:text="4. Keep flipping and matching tiles until you find all the pairs."
        android:textAlignment="gravity"
        android:textColor="#151415"
        android:textSize="22dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:paddingBottom="4dp"
        android:text="Good Luck!"
        android:textAlignment="gravity"
        android:textColor="#151415"
        android:textSize="22dp" />


    <Button
        android:id="@+id/ok_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="#AB47BC"
        android:gravity="center"
        android:paddingStart="10dp"
        android:text="Ok" />
</LinearLayout>